@page "/counter"
@inject AppTranslate.Translate.IAppTranslate Translate
@inject IJSRuntime IJSRuntime
@implements IDisposable


<h1 class="arFlip-1 arAlign">@Translate["Counter"]</h1>

<p class="arFlip-1 arAlign">@Translate["Current count"]: @currentCount</p>

<button class="btn btn-primary d-flex my-2" @onclick="IncrementCount">@Translate["Click me"]</button>


<select class="form-control w-25" @onchange="HandelSelectChanged">
    <option selected="@(Translate.LanguageCode=="en")" value="default">en</option>
    <option selected="@(Translate.LanguageCode=="ar")" value="ar">ar</option>
    <option selected="@(Translate.LanguageCode=="fr")" value="fr">fr</option>
</select>

<h1 class="arFlip-1 arAlign">@Translate["Hello"]</h1>


@code {
    private int currentCount = 0;

    [Parameter]
    public int count { get; set; }

    private void IncrementCount()
    {
        currentCount++;
    }

    private void ChangeLanguge()
    {
        Translate.Switch();
    }

    private void ChangeFile()
    {
        Translate.ChangeThesaurus("thesaurusFR.json");
    }


    private void HandelSelectChanged(ChangeEventArgs e)
    {
        switch (e.Value.ToString())
        {
            case "default":
                Translate.OnceSupportLTR();
                if (!Translate.IsDefault)
                    Translate.Switch("en");
                break;

            case "fr":
                Translate.OnceSupportLTR();
                if (Translate.Path == "thesaurusFR.json")
                {
                    if (Translate.IsDefault)
                        Translate.Switch("fr");
                }
                else
                    Translate.ChangeThesaurus("thesaurusFR.json", "fr");
                break;

            case "ar":
                Translate.OnceSupportRTL();
                if (Translate.Path == "thesaurus.json")
                {
                    if (Translate.IsDefault)
                        Translate.Switch("ar");
                }
                else
                    Translate.ChangeThesaurus("thesaurus.json", "ar");
                break;

            default:
                break;
        }
    }


    protected override void OnInitialized()
    {
        Translate.OnChange += StateHasChanged;
    }

    public void Dispose()
    {
        Translate.OnChange -= StateHasChanged;
    }

}
